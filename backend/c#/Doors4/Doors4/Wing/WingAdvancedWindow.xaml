        <Button Content="Back Data" Visibility="Hidden" x:Name="btnBack" HorizontalAlignment="Left" Margin="610,729,0,0" VerticalAlignment="Top" Click="btnBack_Click" Height="37" Width="70"/>

    </Grid>
</Window>
